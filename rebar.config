{src_dirs, ["src"]}.
{deps, [
  {mqtt_common, {git, "https://github.com/alekras/erl.mqtt.common", {branch, "master"}}},
%    {mysql_client, {git, "git://git.code.sf.net/p/erlmysql/git", {branch, master}}},
%    {lager, {git, "https://github.com/erlang-lager/lager.git", {branch, "master"}}}
  {websocket_client, {git, "git://github.com/jeremyong/websocket_client.git", {branch, "master"}}}
%% For Hex publishing
%  {mysql_client, "1.2.8"},
%  {lager, "3.8.0"},
]}.

{erl_opts, [
  no_debug_info, 
  {parse_transform, lager_transform}
%%	,{d, 'TEST'}
]}.

{cover_enabled, false}.

{clean_files, ["doc/*"]}.

{edoc_opts, [
  {def, [{version, "1.1.0"}]},
  {private, false},
  {source_path, ["src"]},
  {title, "MQTT client for Erlang"}, 
  {overview, "src/overview.edoc"},
  {sort_functions, false}, 
  {stylesheet_file, "priv/my.css"},
  {preprocess, true},
  {includes, ["include", "_build/default/lib/mqtt_common/include"]}
]}.
{plugins, [rebar3_hex]}.

{profiles, [
  {prod, [
    {relx, [
      {dev_mode, false},
      {include_erts, true},
      {include_src, false}
    ]}
  ]},

  {test, [
    {eunit_compile_opts, [{src_dirs, ["src"]}]},
    {eunit_tests, [{dir, "test"}]},
    {eunit_opts, [verbose]},
    {overrides, [{override, mqtt_common, [{erl_opts, [no_debug_info,{parse_transform, lager_transform},{d, 'TEST'}]}]}]},
    {deps, [
      {mysql_client, {git, "git://git.code.sf.net/p/erlmysql/git", {branch, master}}}
    ]}
	]}
]}.